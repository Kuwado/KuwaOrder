<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFxCal.CalculatorController">
    <children>
        <Label text="First Number:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="firstNumberField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Second Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="secondNumberField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="addButton" onAction="#handleAddButton" text="+" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button fx:id="subtractButton" onAction="#handleSubtractButton" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="multiplyButton" onAction="#handleMultiplyButton" text="*" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Button fx:id="divideButton" onAction="#handleDivideButton" text="/" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
