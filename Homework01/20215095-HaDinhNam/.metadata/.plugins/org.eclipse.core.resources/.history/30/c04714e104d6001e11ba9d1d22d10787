package JavaFX;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.scene.layout.AnchorPane;
import javafx.stage.Stage;

// Main class
public class MainApp extends Application {
    
    private Stage primaryStage;
    
    @Override
    public void start(Stage primaryStage) {
        this.primaryStage = primaryStage;
        this.primaryStage.setTitle("Calculator");
        
        initCalculator();
    }
    
    private void initCalculator() {
        try {
            // Load root layout from fxml file
            FXMLLoader loader = new FXMLLoader();
            loader.setLocation(MainApp.class.getResource("CalculatorView.fxml"));
            AnchorPane calculatorView = (AnchorPane) loader.load();
            
            // Show the scene containing the root layout
            Scene scene = new Scene(calculatorView);
            primaryStage.setScene(scene);
            primaryStage.show();
            
            // Give the controller access to the main app
            CalculatorController controller = loader.getController();
            controller.setMainApp(this);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
    
    public static void main(String[] args) {
        launch(args);
    }
}

