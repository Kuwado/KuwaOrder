<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="450.0" minHeight="300.0" minWidth="-Infinity" prefHeight="450.0" prefWidth="620.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.make_order.MOConfirmSiteController">
   <center>
      <VBox alignment="TOP_CENTER" minHeight="250.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="chosenSiteTable" prefHeight="300.0" styleClass="tb">
              <columns>
                <TableColumn fx:id="stt" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" styleClass="tb-col-first" text="STT" />
                <TableColumn fx:id="siteName" maxWidth="175.0" minWidth="175.0" prefWidth="175.0" styleClass="tb-col" text="Tên Site" />
                  <TableColumn fx:id="delivery" maxWidth="125.0" minWidth="125.0" prefWidth="125.0" styleClass="tb-col" text="Phương thức" />
                  <TableColumn fx:id="quantity" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" styleClass="tb-col" text="Số lượng" />
                  <TableColumn fx:id="takeDate" maxWidth="125.0" minWidth="125.0" prefWidth="125.0" styleClass="tb-col" text="Dự kiến nhận" />
              </columns>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TableView>
            <HBox alignment="CENTER" prefHeight="60.0">
               <children>
                  <Button fx:id="backBtn" mnemonicParsing="false" text="Quay lại">
                     <styleClass>
                        <String fx:value="cancel-btn" />
                        <String fx:value="btn" />
                     </styleClass>
                     <HBox.margin>
                        <Insets right="200.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="confirmBtn" mnemonicParsing="false" text="Xác nhận">
                     <styleClass>
                        <String fx:value="confirm-btn" />
                        <String fx:value="btn" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="620.0" style="-fx-background-color: #1b1b32;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/Logo.png" />
               </image>
            </ImageView>
            <HBox alignment="CENTER" prefHeight="70.0" prefWidth="569.0">
               <children>
                  <Label prefHeight="35.0" prefWidth="286.0" text="XÁC NHẬN CHỌN SITE">
                     <styleClass>
                        <String fx:value="popup-title" />
                        <String fx:value="font-size-24" />
                     </styleClass>
                  </Label>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
