<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="400.0" minHeight="300.0" minWidth="-Infinity" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.make_order.MOConfirmSiteController">
   <top>
      <HBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: #1b1b32;" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="popup-title" text="Bạn có chắc muốn chọn những Site này không" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TableView prefHeight="200.0" styleClass="tb">
               <columns>
                  <TableColumn fx:id="stt" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" styleClass="tb-col-first" text="STT" />
                  <TableColumn fx:id="siteName" maxWidth="175.0" minWidth="175.0" prefWidth="175.0" styleClass="tb-col" text="Tên Site" />
                  <TableColumn fx:id="delivery" maxWidth="125.0" minWidth="125.0" prefWidth="125.0" styleClass="tb-col" text="Phương thức" />
                  <TableColumn fx:id="quantity" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" styleClass="tb-col" text="Số lượng" />
                  <TableColumn fx:id="takeDate" maxWidth="125.0" minWidth="125.0" prefWidth="125.0" styleClass="tb-col" text="Dự kiến nhận" />
               </columns>
            </TableView>
            <HBox alignment="CENTER" prefHeight="50.0">
               <children>
                  <Button mnemonicParsing="false" text="Xác nhận">
                     <styleClass>
                        <String fx:value="confirm-btn" />
                        <String fx:value="btn" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
