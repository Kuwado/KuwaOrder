<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../../../css/orderDetail.css" xmlns:fx="hthàngtp://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="fx.order.OrderDetailController">
    <children>
        <Label styleClass="title" text="Chi tiết đơn hàng" />
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100.0" />
                <ColumnConstraints halignment="LEFT" minWidth="200.0" />
            <ColumnConstraints />
            </columnConstraints>
            <children>
                <Label text="Order ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="orderId" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Tên sản phẩm:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="productName" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Số lượng:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="quantity" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Đơn vị:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Label fx:id="unit" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Ngày mong muốn:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <Label fx:id="desiredDate" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Trạng thái:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <Label fx:id="status" styleClass="value-label" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Note:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextArea fx:id="note" editable="false" prefColumnCount="20" prefRowCount="3" styleClass="text-area" wrapText="true" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6" />
            </children>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <HBox alignment="CENTER_RIGHT" spacing="10">
           <children>
               <Button onAction="#handleClose" styleClass="button" text="Close" />
           </children>
         <padding>
            <Insets top="20.0" />
         </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
